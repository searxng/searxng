{
  "build": {
    "args": {
      "DEBIAN_CODENAME": "bookworm",
    },
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/github-cli": {},
    "ghcr.io/devcontainers/features/docker-in-docker": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker"
      ],
      "remote.otherPortsAttributes": {
        "protocol": "https"
      },
      "settings": {
        "files.autoSave": "off",
        "python.defaultInterpreterPath": "/workspaces/zhensa/local/py3/bin/python3",
        "python.formatting.blackPath": "/workspaces/zhensa/local/py3/bin/black",
        "python.linting.pylintPath": "/workspaces/zhensa/local/py3/bin/pylint"
      }
    }
  },
  "forwardPorts": [8000, 8888],
  "portsAttributes": {
    "8000": {"label": "Sphinx documentation"},
    "8888": {"label": "Zhensa"}
  },
  "postCreateCommand": "git pull && make install"
}
